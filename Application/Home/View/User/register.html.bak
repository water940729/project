	$(function(){
		var iNow=60;
		var timer=null;

		function dec(){
			iNow--;
			
			if(iNow<0){
				$("#change").text("Send Again");
				clearInterval(timer);
			}else{
				if(iNow<10){
				iNow="0"+iNow;
			}
				$("#change").text(iNow+"s");
			}

			
		}
		$("#btn").click(function(){
			var data=$(this).parents("form").serialize();
			//var flag=$("#flag").attr("name");
			//alert(data);
			//alert(flag);
				$.ajax({
					type:"POST",
					url:"do_register",
					data:data,
					success:function(msg){
						if(msg==1){
							location.href="login";
						}else{
							alert(msg);
						}
					}
				});
		});
		
		$("#change").click(function(){
			var that=$(this);
			var phone=$("#username").val()

			if(that.text()=="Send"||that.text=="Resend"){
				$.ajax({
				type:"POST",
				url:"sms",
				data:"username="+phone,
				success:function(msg){
					if(msg==1){
						if(iNow==0){
							$(this).text("Resend");
							clearInterval(timer);
						}else{
							timer=setInterval(dec,1000);
						}
						
					}else{
						alert(msg);
						clearInterval(timer);
						that.text("Send");
					}
				}
			})
			}else{
				return false;
			}
			
		});
		
		$(".form_div form input").keydown(function(ev){
			if(ev.keyCode==13){
				$("#btn").click();
			}
		});
	});
